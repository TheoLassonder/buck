WATCHMAN_SRCS = [
  'Watchman.java',
  'WatchmanClient.java',
  'WatchmanSocketClient.java',
]
java_library(
  name = 'watchman',
  srcs = WATCHMAN_SRCS,
  autodeps = True,
  visibility = [
    '//src/com/facebook/buck/cli:cli',
    '//src/com/facebook/buck/json:json',
    '//src/com/facebook/buck/parser:parser',
    '//src/com/facebook/buck/rules:types',
    '//src/com/facebook/buck/util:watchman',
    '//test/com/facebook/buck/...',
  ],
)

FINDER_SRCS = [
  'ExecutableFinder.java',
  'FileFinder.java',
]
java_library(
  name = 'executable-finder',
  srcs = FINDER_SRCS,
  autodeps = True,
  visibility = [ 'PUBLIC' ],
)

java_immutables_library(
  name = 'io',
  srcs = glob(['*.java'], excludes = FINDER_SRCS + WATCHMAN_SRCS),
  tests = [
    '//test/com/facebook/buck/io:io',
  ],
  immutable_types = [
    'ArchiveMemberPath',
    'BuckPaths',
  ],
  autodeps = True,
  visibility = [ 'PUBLIC' ],
)
